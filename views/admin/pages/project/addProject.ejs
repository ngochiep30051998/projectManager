<!doctype html>
<html class="no-js" lang="en">

<head>
    <% include ../../partials/head %>
</head>

<body>


    <!-- Left Panel -->

    <% include ../../partials/leftMenu %>

    <div id="right-panel" class="right-panel">

        <!-- Header-->

        <% include ../../partials/header %>

        <!-- Header-->

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h3>Thêm dự án</h3>
                </div>
                <%if (status && status === 'SUCCESS'){%>
                <div class="alert alert-success" role="alert">
                    <%=message%>
                </div>
                <%}%>

                <%if (status && status === 'ERROR'){%>
                    <div class="alert alert-danger" role="alert">
                        <%=message%>
                    </div>
                    <%}%>
                <div class="card-body card-block">
                    <form  method="POST" class="form-horizontal" action="/admin/project/add" enctype="multipart/form-data">
                        <div class="row form-group">
                            <div class="col col-md-2"><label for="text-input" class=" form-control-label">Tên sự
                                    án</label></div>
                            <div class="col-12 col-md-7"><input required type="text" id="text-input" name="projectName"
                                    class="form-control"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-2"><label for="text-input" class=" form-control-label">Vị trí dự
                                    án</label></div>
                            <div class="col-12 col-md-7"><input type="text" id="text-input" name="location"
                                    class="form-control"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-2"><label for="textarea-input" class=" form-control-label">Nội
                                    dung</label></div>
                            <div class="col-12 col-md-7">
                                <textarea name="content" id="textarea-input" rows="9" class="form-control"
                                    placeholder="nội dung"></textarea>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-2"><label for="text-input" class=" form-control-label">Giá</label>
                            </div>
                            <div class="col-12 col-md-2"><input required type="number" id="text-input" name="price"
                                    class="form-control"></div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-2"><label for="text-input" class=" form-control-label">Lượt quan
                                    tâm</label></div>
                            <div class="col-12 col-md-2"><input type="number" id="text-input" name="viewNumber"
                                    class="form-control"></div>
                        </div>
                        <div class="page-header">
                            <h3>Hình ảnh</h3>
                            <hr>
                            <img class="img-thumbnail" src="http://placehold.it/400x400" id="displayImg" alt="">
                        </div>
                        <fieldset class="form-group">
                            <input type="file" class="form-control-file" required onchange="onFileSelected(event)" id="image"
                                name="image">
                        </fieldset>
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Thêm
                        </button>
                        <button type="reset" class="btn btn-danger btn-sm">
                            <i class="fa fa-ban"></i> Hủy
                        </button>
                    </form>
                </div>

            </div>


            <script>
                const onFileSelected = (event) => {
                    const selectedFile = event.target.files[0];
                    const reader = new FileReader();

                    const imgtag = document.getElementById("displayImg");
                    imgtag.title = selectedFile.name;

                    reader.onload = (event) => {
                        imgtag.src = event.target.result;
                    };
                    reader.readAsDataURL(selectedFile);
                }
            </script>


            <% include ../../partials/footer %>
</body>

</html>