<!doctype html>
<html class="no-js" lang="en">

<head>
    <% include ../../partials/head %>
</head>

<body>


    <!-- Left Panel -->

    <% include ../../partials/leftMenu %>

    <div id="right-panel" class="right-panel">

        <!-- Header-->

        <% include ../../partials/header %>

        <!-- Header-->

        <!-- .content -->
        <div class="content mt-3">
            <div id="mess"></div>
            <div class="animated fadeIn">
                <div class="row">
                    <div class="card-header col-sm-12">
                        <form class="form-inline my-2 my-lg-0 " method="GET" action="/admin/news/search">
                            <input class="form-control mr-sm-2 col-sm-4" name="q" type="text" placeholder="Tiêu đề">
                            <button type="submit" class="btn btn-dark rounded" class="col-sm-4">Tìm kiếm</button>
                        </form>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="mytable" class="table table-bordred table-striped">

                                <thead>
                                    <th>Mã tin tức</th>
                                    <th>Tiêu đề</th>
                                    <th>Ảnh</th>
                                    <th>Đường dẫn</th>
                                    <th>Chi tiết</th>
                                </thead>
                                <tbody>
                                    <% listNews.forEach((news) => { %>
                                    <tr>
                                        <td style="width:10%;"><%= news.Id %></td>
                                        <td style="width:35%;"><%= news.Title %></td>
                                        <td style="width:20%;"> 
                                            <img src="<%='/upload/news/' +news.Image %>"id="displayImg" alt="ảnh dự án" width="70%">
                                        </td>
                                        <td style="width:30%;"><%= news.Link %></td>
                                        <td style="width:5%;">
                                            <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                <a href="/admin/news/edit/<%=news.Id%>">
                                                    <button class="btn btn-primary btn-xs rounded btn-sm">
                                                        <span class="fa fa-edit"></span>
                                                    </button>
                                                </a>
                                            </p>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% if(numPages>0) {%>
                            <ul class="pagination">
                                <% for(let i = 1;i<= numPages ;i++) { %>
                                <% if(i==page) {%>
                                <li class="page-item active">
                                    <a class="page-link " href="/admin/news?page=<%= i %>"><%= i %></a>
                                </li>
                                <% } else {%>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/news?page=<%= i %>"><%= i %></a>
                                </li>
                                <% } %>
                                <% } %>
                            </ul>
                            <% } %>
                    </div>
                </div>
            </div><!-- .animated -->
        </div> <!-- .content -->


        <% include ../../partials/footer %>

</body>

</html>