<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tin tá»©c</title>
    <% include ../partials/head %>
</head>

<body>

    <!-- Header-->

    <% include ../partials/header %>

    <!-- Header-->
    <main id="main-detail" class="">
        <div class="content-detail-news">
            <div class="container">
                <div class="row">
                    <% listNews.forEach((news) => { %>
                    <div class="col-lg-6 content-news">
                        <div class="col-lg-12 col-sm-12">
                            <div class="single_event">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 col-md-7">
                                        <div class="event_thumb">
                                            <img src="<%='/upload/news/' +news.Image %>" height="200" width="100%"
                                                alt="">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-5">
                                        <div class="event_details">
                                            <h4>
                                                <a href="<%= news.Link %>" target="_blank"><%= news.Title %></a>
                                            </h4>
                                            <p class="content-details"><%= news.Content%></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <!-- pagination -->
                <div class="row" style="padding-top: 3em">
                    <div class="col-sm-12">
                        <% if(numPages>0) {%>
                        <ul class="pagination">
                            <% for(let i = 1;i <= numPages ;i++) { %>
                            <% if(i==page) {%>
                            <li class="page-item active">
                                <a class="page-link " href="/news?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } else {%>
                            <li class="page-item">
                                <a class="page-link" href="/news?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                            <% } %>
                        </ul>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <% include ../partials/footer %>
</body>

</html>