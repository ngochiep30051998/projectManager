<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dự án</title>
    <% include ../partials/head %>
</head>

<body>

    <!-- Header-->

    <% include ../partials/header %>

    <!-- Header-->
    <main id="main" class="">
        <div class="container" style="padding-top: 3em">
            <div class="row">
                <p class="choose-price">
                    <form class="form-inline" action="/filter" method="GET">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="option" id="inlineRadio1"
                                value="option1">
                            <label class="form-check-label" for="inlineRadio1">Dưới 1 tỷ</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="option" id="inlineRadio1"
                                value="option2">
                            <label class="form-check-label" for="inlineRadio1">1 đến 3 tỷ</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="option" id="inlineRadio1"
                                value="option3">
                            <label class="form-check-label" for="inlineRadio1">Trên 3 tỷ</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Lọc</button>
                    </form>
                </p>
            </div>
        </div>
        <div class="row content-project">
            <% listProject.forEach((project) => { %>
            <div class="col-lg-4">
                <div class="imagenho1">
                    <img src="<%='/upload/project/' +project.Image %>" width="100%" height="200" alt="">
                    <h3 class="project-name"><%= project.ProjectName %></h3>
                    <p class="project-location"><%= project.Location %></p>
                    <a href="/project-detail/<%= project.Id%>" class="xct">xem chi tiết</a>
                </div>
            </div>
            <% }); %>

            <!-- pagination -->
            <div class="container" style="padding-top: 3em">
                <div class="row">
                    <div class="col-sm-12">
                        <% if(numPages>0) {%>
                        <ul class="pagination">
                            <% for(let i = 1;i <= numPages ;i++) { %>
                            <% if(i==page) {%>
                            <li class="page-item active">
                                <a class="page-link " href="/project?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } else {%>
                            <li class="page-item">
                                <a class="page-link" href="/project?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                            <% } %>
                        </ul>
                        <% } %>
                    </div>
                </div>
            </div>

        </div>

    </main>

    <% include ../partials/footer %>
</body>

</html>